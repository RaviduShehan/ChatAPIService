pipeline{
    agent any
    environment {
        dockerImageName = "${params.DOCKER_IMAGE_NAME}"
        kubeconfigId = "${params.KUBECONFIG_ID}"
        openaiApiKey = "${params.OPENAI_API_KEY}"
    }
    stages{
        stage('Deploy to Dev Environment') {
            steps {
                script {
                    withKubeConfig(credentialsId: kubeconfigId) {
                        sh "sed -i 's|OPENAI_API_KEY|$openaiApiKey|g' chat-dev.yml"
                        kubernetesDeploy(configs: 'chat-dev.yml', kubeconfigId: kubeconfigId)
                    }
                }
            }
        }
        stage('Deploy to Test Environment') {
            steps {
                script {
                    withKubeConfig(credentialsId: kubeconfigId) {
                        sh "sed -i 's|OPENAI_API_KEY|$openaiApiKey|g' chat-test.yml"
                        kubernetesDeploy(configs: 'chat-test.yml', kubeconfigId: kubeconfigId)
                    }
                }
            }
        }
        stage('Deploy to Prod Environment') {
            steps {
                script {
                    withKubeConfig(credentialsId: kubeconfigId) {
                        sh "sed -i 's|OPENAI_API_KEY|$openaiApiKey|g' chat-prod.yml"
                        kubernetesDeploy(configs: 'chat-prod.yml', kubeconfigId: kubeconfigId)
                    }
                }
            }
        }
    }
}


