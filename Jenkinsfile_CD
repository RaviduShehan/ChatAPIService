import com.google.jenkins.plugins.deploy.steps.KubernetesEngineDeployStep


pipeline {
    agent any
    environment {
        dockerImageName = "${params.DOCKER_IMAGE_NAME}"
        kubeconfigId = "${params.KUBECONFIG_ID}"

        gkeClusterName = "openai-api-services"
        gkeZone = "us-central1"
        gkeCredentialsId = "my-gke-credentials"
    }
    stages{
        stage('Deploy to Dev Environment') {
                steps {
                    step([
                        $class: 'KubernetesEngineBuilder',
                        projectId: apiservices-384019,
                        credentialsId: gkeCredentialsId,
                        clusterName: gkeClusterName,
                        location: gkeZone,
                        manifestPattern: 'chat.yaml',
                        verifyDeployments: true
                         )]
                        }
                }
        stage('Deploy to Test Environment') {
                steps {
                    script {
                        gkeDeploy(
                            credentialsId: gkeCredentialsId,
                            clusterName: gkeClusterName,
                            zone: gkeZone,
                            deployName: 'chat-test',
                            containerName: 'chat-test',
                            yamlPath: 'chattest.yaml'
                         )
                        }
                }
        }
        stage('Deploy to Prod Environment') {
                steps {
                    script {
                        gkeDeploy(
                            credentialsId: gkeCredentialsId,
                            clusterName: gkeClusterName,
                            zone: gkeZone,
                            deployName: 'chat-prod',
                            containerName: 'chat-prod',
                            yamlPath: 'chatprod.yaml'
                         )
                        }
                }
        }
    }
}
