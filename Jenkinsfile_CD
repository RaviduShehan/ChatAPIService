pipeline {
    agent any
    environment {
        dockerImageName = "${params.DOCKER_IMAGE_NAME}"
        kubeconfigId = "${params.KUBECONFIG_ID}"
    }
    stages{
        stage('Deploy to Dev Environment') {
            steps {
                script {
                    sh "kubectl apply -f chat-dev.yml --kubeconfig=$kubeconfigId"
                }
            }
        }
        stage('Deploy to Test Environment') {
            steps {
                script {
                    sh "kubectl apply -f chat-test.yml --kubeconfig=$kubeconfigId"
                }
            }
        }
        stage('Deploy to Prod Environment') {
            steps {
                script {
                    sh "kubectl apply -f chat-prod.yml --kubeconfig=$kubeconfigId"
                }
            }
        }
    }
}
